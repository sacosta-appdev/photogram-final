<div>
  <div>
    <h1>
      List of photos
    </h1>
  </div>
</div>

<hr>

<div>
  <div>

    <form action="/insert_photo" method="post" class="form-horizontal" enctype="multipart/form-data">

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="file" id="image_box" name="query_image" class="form-control">
      

        <label for="caption_box">
          Captions
        </label>

        <textarea type="text" id="caption_box" name="query_caption" placeholder="Enter a caption for the photo..."></textarea>

        <input type="hidden" id="owner" name="query_owner" value="<%= session.fetch(:user_id) %>">
      

        <button>
          Add photo
        </button>
      </div>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="2">
      <tr>
        <th>
          Image
        </th>

        <th>
          Caption
        </th>

        <th>
          Owner
        </th>

        <th>
          Posted
        </th>

        <th>
          Likes
        </th>

        <th></th>

      </tr>

      <% @list_of_photos.each do |a_photo| %>
          <tr>
            <td>
              <img src="<%= a_photo.image %>" class = "img-responsive" >
            </td>

            <td>
              <%= a_photo.caption %>
            </td>

            <td>
              <%= a_photo.owner.username %>
            </td>

            <td>
              <%= time_ago_in_words(a_photo.created_at) %> ago
            </td>

            <td>
              <%= a_photo.likes_count %>
            </td>

            <td>
              <a href="/photos/<%= a_photo.id %>">
                Show details
              </a>
            </td>
          </tr>
    
      <% end %>
    </table>
  </div>
</div>

<hr>
